{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "module": "NodeNext",
        "outDir": "./dist",
        "declaration": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
